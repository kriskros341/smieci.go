{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./src",
    "strict": true,
    "allowJs": true,
    "paths": {
      "@hooks/*": ["hooks/*"],
      "@api/*": ["api/*"],
      "@ui/*": ["ui/*"],
      "@sheets/*": ["sheets/*"],
      "@components/*": ["components/*"],
      "@stores/*": ["stores/*"],
      "@utils/*": ["utils/*"],
      "@/*": ["./*"]
    }
  }
}
